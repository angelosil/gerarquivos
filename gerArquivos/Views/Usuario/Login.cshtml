@model gerArquivos.Models.vo.voUser

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
        <div class="row">
            <div class="col-xs-8 col-sm-4 col-md-4 col-lg-4 col-xs-offset-2 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
                <div class="alert alert-info">
                    <span id="infoUser">Entre com seu login do Google</span>
                </div>
            </div>
            <div class="col-xs-8 col-sm-4 col-md-4 col-lg-4 col-xs-offset-2 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
                <button onclick="javascript: LoginGoogle(1)" class="btn btn-default" id="loginGoogle">Login com Google</button>
                <button onclick="javascript: desconectarGoogle()" class="btn btn-default" id="logoutGoogle">Desconectar</button>
            </div>

            </div>
            <div class="row">
                <div class=""></div>

            </div>

<script>
    function getEmailUser() {
        if (window.localStorage.getItem("user.email")) {
            document.getElementById("infoUser").innerHTML = "Conectado como: " + window.localStorage.getItem("user.email");
            document.getElementById("loginGoogle").style.display = 'none';
            document.getElementById("logoutGoogle").style.display = '';
        }
        else {
            document.getElementById("loginGoogle").style.display = '';
            document.getElementById("logoutGoogle").style.display = 'none';
        }
    }

    getEmailUser();
    
</script>